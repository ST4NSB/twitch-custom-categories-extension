{
	"manifest_version": 2,
	"name": "Twitch custom categories",
	"author": "ST4NSB",
	"permissions": [
		"tabs",
		"storage",
  		"activeTab",
		"*://*.twitch.tv/**"
	],
	"description": "Custom categories integrated within Twitch",
	"version": "1.0",
    "web_accessible_resources": [
        ".env"
    ],
	"content_scripts": [
		{
			"matches": [
				"*://*.twitch.tv/directory/following"
			],
			"css": [
				"assets/content.css"
			],
			"js": [
				"providers/storage.js",
				"providers/twitch_integration.js",
				"generators/buttons_html_generator.js",
				"generators/mainpage_html_generator.js",
				"main_page.js"
			]
		},
		{
			"matches": [
				"*://*.twitch.tv/*"
			],
			"exclude_matches": [
				"*://*.twitch.tv/directory/following"
			],
            "css": [
				"assets/content.css"
			],
			"js": [
				"providers/storage.js",
				"providers/twitch_integration.js",
				"generators/buttons_html_generator.js",
				"channel.js"
			]
		}
	]
}